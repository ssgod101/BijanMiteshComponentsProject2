        <Label x:Name="PlayerTop" Content="" FontSize="22" FontWeight="DemiBold" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="305,10,280,337" Width="207" Height="72"></Label>
        <Label x:Name="PlayerBotton" Content="" FontSize="22" FontWeight="DemiBold" Margin="305,368,280,0" HorizontalAlignment="Center" VerticalAlignment="Center" Width="207" Height="51" ></Label>
        <StackPanel x:Name="StackPanel" Margin="120,248,148,56" Orientation="Horizontal" />
